<div class="card">
  <h5 class="card-header">Laisser un commentaire <%= image_tag(("comment.png"), class:"comment_icon float-right") %> <span class="float-right"><%= @event.comments.count %></span> </h5>
  <div class="card-body"> 
    <div class='container'>

      <% if user_signed_in? %>

        <%= form_with(model: @comment) do |form| %>
            <h6> Nouveau commentaire : </h6>
            <p><%= form.text_area :text, placeholder:"Votre commentaire...", class: 'form-control' %></p>
            <%= form.hidden_field :event_id, value: @event.id %>
            <%= form.hidden_field :user_id, value: current_user.id %>

            <button type="submit" class="btn btn-outline-success btn-rounded">Commenter</button>
            
        <% end %>

      <% else %>

        <%= form_with(model: @comment, local: true) do |form| %>
            <h6> Nouveau commentaire : </h6>
            <p><%= form.text_area :text, placeholder:"Votre commentaire...", class: 'form-control' %></p>
            <%= form.hidden_field :event_id, value: @event.id %>
            <%= form.hidden_field :user_id, value: current_user.id %>

            <button type="submit" class="btn btn-outline-success btn-rounded">Commenter</button>
            
        <% end %>

      <% end %>

    </div>
  </div>
</div>
